        <receiver
            android:name=".PostureReminderReceiver"
            android:exported="false" />

        <activity
            android:name=".AccountSettingsActivity"
            android:exported="false"
            android:parentActivityName=".SettingsActivity" />
            
        <activity 
            android:name=".ChangeUsernameActivity"
